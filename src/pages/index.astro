<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
		<style>
			.splash {
				position: fixed;
				inset: 0;
				z-index: 9999;
				display: flex;
				align-items: center;
				justify-content: center;
				background: #0a0a0a;
				cursor: pointer;
				transition: opacity 0.4s ease-out;
				overflow: hidden;
				/* Fill viewport on mobile when URL bar shows/hides */
				min-height: 100dvh;
				min-height: 100vh;
			}
			.splash.hidden {
				opacity: 0;
				pointer-events: none;
			}
			.splash img {
				width: 100%;
				height: 100%;
				min-width: 100%;
				min-height: 100%;
				object-fit: cover;
				object-position: center;
				display: block;
				vertical-align: middle;
			}
		</style>
	</head>
	<body>
		<div id="splash" class="splash" role="button" tabindex="0" aria-label="Click to enter">
			<img src="/epic-freelancer.JPG" alt="Epic freelancer" />
		</div>
		<main>
			<h1>Astro</h1>
		</main>
		<script>
			document.getElementById('splash')?.addEventListener('click', () => {
				document.getElementById('splash')?.classList.add('hidden');
			});
			document.getElementById('splash')?.addEventListener('keydown', (e) => {
				if (e.key === 'Enter' || e.key === ' ') {
					e.preventDefault();
					document.getElementById('splash')?.classList.add('hidden');
				}
			});
		</script>
	</body>
</html>
